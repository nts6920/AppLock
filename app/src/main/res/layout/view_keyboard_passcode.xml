<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/margin_32dp"
        android:paddingEnd="@dimen/margin_32dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_numberOne"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberTwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_numberTwo"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberOne"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberThree"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberOne"
            app:layout_constraintTop_toBottomOf="@+id/btn_numberOne"
            app:layout_constraintTop_toTopOf="@+id/btn_numberOne"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_numberThree"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberTwo"
            app:layout_constraintTop_toTopOf="@+id/btn_numberTwo"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_numberFour"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberFive"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_numberOne"
            app:layout_constraintWidth_percent="0.3" />

        <Button
            android:id="@+id/btn_numberFive"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberFour"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberThree"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberFour"
            app:layout_constraintTop_toBottomOf="@+id/btn_numberFour"
            app:layout_constraintTop_toTopOf="@+id/btn_numberFour"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_numberSix"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberFive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberFive"
            app:layout_constraintTop_toTopOf="@+id/btn_numberFive"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_numberSeven"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberFive"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_numberFour"
            app:layout_constraintWidth_percent="0.3" />

        <Button
            android:id="@+id/btn_numberEight"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberSeven"
            app:layout_constraintEnd_toStartOf="@+id/btn_numberThree"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberSeven"
            app:layout_constraintTop_toBottomOf="@+id/btn_numberSeven"
            app:layout_constraintTop_toTopOf="@+id/btn_numberSeven"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_numberNine"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_numberEight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_numberEight"
            app:layout_constraintTop_toTopOf="@+id/btn_numberEight"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.3" />


        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:background="?attr/bg_btn_back_passCode"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
