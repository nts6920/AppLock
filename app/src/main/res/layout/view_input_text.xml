<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_pass_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/dot_input_passCode"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/bg_pass_one"
            app:layout_constraintStart_toStartOf="@+id/bg_pass_one"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bg_pass_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_path_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bg_pass_two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/img_pass_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/dot_input_passCode"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/bg_pass_two"
            app:layout_constraintStart_toStartOf="@+id/bg_pass_two"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bg_pass_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_path_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bg_pass_three"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bg_pass_one" />


        <ImageView
            android:id="@+id/img_pass_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/dot_input_passCode"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/bg_pass_three"
            app:layout_constraintStart_toStartOf="@+id/bg_pass_three"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bg_pass_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_path_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bg_pass_four"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bg_pass_two" />


        <ImageView
            android:id="@+id/img_pass_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/dot_input_passCode"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/bg_pass_four"
            app:layout_constraintStart_toStartOf="@+id/bg_pass_four"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bg_pass_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_path_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bg_pass_three" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>