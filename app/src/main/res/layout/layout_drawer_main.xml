<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundMain">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_drawer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_68dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_home"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_home" />

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_end_icon_drawer"
                    android:src="@drawable/ic_home"
                    app:layout_constraintEnd_toStartOf="@+id/tv_home"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_home"
                    app:layout_constraintStart_toEndOf="@+id/img_home"
                    app:layout_constraintTop_toTopOf="@+id/img_home" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_next_more"
                    app:layout_constraintBottom_toBottomOf="@+id/img_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_home" />


                <View
                    android:id="@+id/v_themes"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_themes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_themes" />

                <ImageView
                    android:id="@+id/img_themes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_theme"
                    app:layout_constraintBottom_toTopOf="@+id/v_backGround"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_home" />

                <TextView
                    android:id="@+id/tv_themes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/themes"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_themes"
                    app:layout_constraintStart_toEndOf="@+id/img_themes"
                    app:layout_constraintTop_toTopOf="@+id/img_themes" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_next_more"
                    app:layout_constraintBottom_toBottomOf="@+id/img_themes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_themes" />


                <View
                    android:id="@+id/v_backGround"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_backGround"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_backGround" />

                <ImageView
                    android:id="@+id/img_backGround"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_image"
                    app:layout_constraintBottom_toTopOf="@+id/v_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_themes" />


                <TextView
                    android:id="@+id/tv_backGround"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backGround"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_backGround"
                    app:layout_constraintStart_toEndOf="@+id/img_backGround"
                    app:layout_constraintTop_toTopOf="@+id/img_backGround" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_next_more"
                    app:layout_constraintBottom_toBottomOf="@+id/img_backGround"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_backGround" />

                <View
                    android:id="@+id/v_share"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_share" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_backGround" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    android:fontFamily="@font/lato_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/img_share"
                    app:layout_constraintStart_toEndOf="@+id/img_share"
                    app:layout_constraintTop_toTopOf="@+id/img_share" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_next_more"
                    app:layout_constraintBottom_toBottomOf="@+id/img_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_share" />


                <View
                    android:id="@+id/v_contactUs"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_contactUs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_contactUs" />

                <ImageView
                    android:id="@+id/img_contactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_contact"
                    app:layout_constraintBottom_toTopOf="@+id/v_introduce"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_share" />

                <TextView
                    android:id="@+id/tv_contactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contactUs"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    android:fontFamily="@font/lato_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/img_contactUs"
                    app:layout_constraintStart_toEndOf="@+id/img_contactUs"
                    app:layout_constraintTop_toTopOf="@+id/img_contactUs" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_next_more"
                    app:layout_constraintBottom_toBottomOf="@+id/img_contactUs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_contactUs" />


                <View
                    android:id="@+id/v_introduce"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_ripple_view_home"
                    app:layout_constraintBottom_toBottomOf="@+id/img_introduce"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_introduce" />

                <ImageView
                    android:id="@+id/img_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_introduce"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_contactUs" />

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduce"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/lato_medium"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_introduce"
                    app:layout_constraintStart_toEndOf="@+id/img_introduce"
                    app:layout_constraintTop_toTopOf="@+id/img_introduce" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:text="@string/app_name_version"
                    android:textColor="@color/color_777777"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_introduce"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_introduce" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>